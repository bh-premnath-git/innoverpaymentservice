# ====== Hostname Configuration ======
# Change this for remote servers: e.g., auth.192.168.1.100.sslip.io
AUTH_HOSTNAME=auth.127.0.0.1.sslip.io

# ====== Identity (sslip.io unified issuer) ======
OIDC_ISSUER=https://auth.127.0.0.1.sslip.io/realms/innover
OIDC_AUDIENCE=wso2am

# ====== OTEL ======
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# ====== Redis ======
REDIS_PASSWORD=redis-secret

# ====== Database Credentials (CockroachDB) ======
KEYCLOAK_DB_PASSWORD=keycloakpass
# CockroachDB uses 'root' as default user in insecure mode
DB_USER=root
DB_PASSWORD=
DB_NAME=innover
DB_HOST=cockroach1
DB_PORT=26257

# ====== WSO2 API Manager ======
WSO2_ADMIN_USERNAME=admin
WSO2_ADMIN_PASSWORD=admin
WSO2_AM_CLIENT_ID=wso2am
WSO2_AM_CLIENT_SECRET=wso2am-secret

# ====== Keycloak Key Manager (for WSO2) ======
KEYCLOAK_KM_CLIENT_ID=wso2am
KEYCLOAK_KM_CLIENT_SECRET=wso2am-secret

# ====== Keycloak URLs (sslip.io - same for host and containers) ======
# Public issuer (accessed via Nginx reverse proxy)
KEYCLOAK_PUBLIC_BASE_URL=https://auth.127.0.0.1.sslip.io
KEYCLOAK_PUBLIC_REALM_URL=https://auth.127.0.0.1.sslip.io/realms/innover
KEYCLOAK_ISSUER=https://auth.127.0.0.1.sslip.io/realms/innover

# Internal URL (same as public, thanks to Nginx network aliases)
KEYCLOAK_INTERNAL_BASE_URL=https://auth.127.0.0.1.sslip.io
KEYCLOAK_INTERNAL_REALM_URL=https://auth.127.0.0.1.sslip.io/realms/innover

# ====== Keycloak Admin ======
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin
