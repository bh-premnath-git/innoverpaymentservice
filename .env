DB_USER=root
DB_PASSWORD=
DB_NAME=innover
DB_HOST=cockroach1
DB_PORT=26257

# ====== WSO2 Identity Server ======
WSO2_HOSTNAME=localhost
WSO2_IS_ADMIN_USERNAME=admin
